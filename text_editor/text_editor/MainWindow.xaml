<Window x:Name="Window" x:Class="text_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:text_editor"
        mc:Ignorable="d"
        Title="Text Editor" Height="417.2" Width="800">
    <Grid Margin="0,0,-0.4,33">
        <Menu HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="794" Margin="0,0,-0.4,0">
            <MenuItem Header="File">
                <MenuItem x:Name="Save" Header="Save" Click="Save_Click">
                </MenuItem>
                <MenuItem Header="Open" Click="Open_Click">
                </MenuItem>
                <MenuItem Header="Close" Click="Close_Click">
                </MenuItem>
                <MenuItem Header="Exit" Click="Exit_Click">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Copy" InputGestureText="Ctrl+C" Click="Copy_Click"></MenuItem>
                <MenuItem Header="Paste" InputGestureText="Ctrl+V" Click="Paste_Click"></MenuItem>
                <MenuItem Header="Cut" InputGestureText="Ctrl+X" Click="Cut_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="397" Margin="0,21,0,-31" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="794" Cursor="IBeam"/>

    </Grid>
</Window>
